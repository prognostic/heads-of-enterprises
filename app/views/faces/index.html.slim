p#notice= notice
h3 Персоны

.row
  .col-lg-12
    .panel.panel-default
      .panel-body
        .table-responsive
          table class='table table-striped table-bordered table-hover'
            thead
              tr
                th
                  em.icon-user
                  |  ФИО
                th
                  em.icon-phone
                  |  Номера телефонов
                th
                  em.icon-bubble
                  |  Комментарий
                th
            tbody
              - @faces.each do |face|
                tr
                  td
                    .media
                      .media-left.media-middle
                        = image_tag face.passport.url(:small), class: 'img-responsive img-circle thumb32'
                      .media-right.pt-sm
                        = face.full_name
                        label Назначения
                        - if face.assignments
                          div
                            - face.assignments.each do |assignment|
                              div
                                div
                                  - if assignment.director?
                                    span.label.label-info Директор в:
                                  - if assignment.founder?
                                    span.label.label-info Учредитель в:
                                  = link_to " #{assignment.company.title}", company_path(assignment.company_id) if assignment.company_id && assignment.company.title
                  td
                    .label.bg-gray-lighter.ph-lg.mr.text-sm.visible-lg-inline Рабочий
                    = " #{face.work_phone}"
                    br
                    .label.bg-gray-lighter.ph-lg.mr.text-sm.visible-lg-inline Личный
                    = " #{face.personal_phone}"
                  td= face.comment
                  td
                    .col-md-1
                      = link_to '', face, class: 'fa fa-eye text-success'
                    .col-md-1
                      = link_to '', edit_face_path(face), class: 'fa fa-edit text-warning'
                    .col-md-1
                      = link_to '', face, data: { confirm: 'Вы уверены?' }, method: :delete, class: 'fa fa-remove text-danger'
        = paginate @faces
      .panel-footer
        = link_to 'Добавить персону', new_face_path