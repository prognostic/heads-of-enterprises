p#notice= notice
h3= "Счет"

.row
  .col-lg-12
    .panel.panel-default
      .panel-body
        div class="col-sm-2 control-label"
          = "Статус"
        div
          = @bank_account.status
        br
        div class="col-sm-2 control-label"
          = "Сумма на счету"
        div
          = @bank_account.amount_of_money
        br
        div class="col-sm-2 control-label"
          = "Дата открытия"
        div
          = @bank_account.opening_date
        br
        div class="col-sm-2 control-label"
          = "Отделение"
        div
          = @bank_account.branch_id
        br
        div class="col-sm-2 control-label"
          = "Компания"
        div
          = @bank_account.company_id
        br
        div class="col-sm-2 control-label"
          = "Комментарий"
        div
          = @bank_account.comment
        br
      .panel-footer
        = link_to 'Редактировать ', edit_bank_account_path(@bank_account)
        '|
        = link_to 'Назад', bank_accounts_path